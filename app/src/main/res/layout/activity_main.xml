<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="40sp"
        android:singleLine="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                style="@style/ActionButton"
                android:id="@+id/but_AC"
                android:text="AC"/>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/but_op"
                android:text="("/>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/but_cl"
                android:text=")"/>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/but_del"
                android:text="/"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_7"
                android:text="7"/>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_8"
                android:text="8"/>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_9"
                android:text="9"/>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/but_mu"
                android:text="*"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_4"
                android:text="4"/>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_5"
                android:text="5"/>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_6"
                android:text="6"/>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/but_pl"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_1"
                android:text="1"/>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_2"
                android:text="2"/>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_3"
                android:text="3"/>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/but_min"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_sp"
                android:text="."/>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_0"
                android:text="0"/>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/but_back"
                android:text="Back"/>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/but_res"
                android:text="="/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>